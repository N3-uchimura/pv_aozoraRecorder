{
  "name": "aozora-recorder",
  "productName": "aozora-recorder personal",
  "version": "1.1.1",
  "private": true,
  "description": "personal application for recording aozora books.",
  "main": "build/aozorarecorder.js",
  "scripts": {
    "build": "tsc && chcp 65001",
    "start": "npm run build && electron .",
    "build-win": "npm run build && electron-builder --win --x64"
  },
  "keywords": [],
  "author": {
    "name": "numthree-uchimura (https://github.com/N3-uchimura/)",
    "email": "uchimura@numthree.net"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "electron-log": "^5.4.0",
    "fluent-ffmpeg": "^2.1.3",
    "iconv-lite": "^0.6.3",
    "node-cache": "^5.1.2",
    "stream": "^0.0.3",
    "util": "^0.12.5"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/node": "^20.19.9",
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "net.numthree.aozorarecorder",
    "productName": "aozorarecorder",
    "files": [
      "build/**/*",
      "package.json",
      "!dist/**/*",
      "!src/**/*",
      "!.gitignore",
      "!.vscode"
    ],
    "extraResources": [
      "assets",
      "www/**/*"
    ],
    "squirrelWindows": {},
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/aozora.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
